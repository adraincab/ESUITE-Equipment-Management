{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts", "/test/**/*.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/../src/$1"
  },
  "resolver": null
}
